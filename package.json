{
  "name": "webrtc-audio-app",
  "version": "1.0.0",
  "description": "WebRTC Audio Application with Admin Control",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:network": "HOST=0.0.0.0 node server.js",
    "build:css": "tailwindcss -i ./public/src/input.css -o ./public/style.css",
    "watch:css": "tailwindcss -i ./public/src/input.css -o ./public/style.css --watch",
    "dev": "npm run build:css && npm run start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}
